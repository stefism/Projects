<main class="mt-3">

    <div class="button-holder d-flex justify-content-center">

        <button type="button" formaction="/Products/All" class="btn bg-musaca text-white">Product</button>

        <form class="mx-auto w-50" method="post" action="">
            <label for="username" class="text-musaca"></label>
            <input type="text" class="form-control" id="barcode" placeholder="Barcode..." name="barcode">

            <label for="username" class="text-musaca"></label>
            <input type="text" class="form-control" id="quantity" placeholder="Quantity..." name="quantity">

            <button type="submit" class="btn bg-musaca text-white">Order</button>
        </form>

    </div>
    <hr class="bg-musaca w-150 hr-2" />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><b>Product Name</b></th>
                <th><b>Quantity</b></th>
                <th><b>Price</b></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td> @product.Name</td>
                        <td>x @product.Quantity</td>
                        <td>$ @product.Price</td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <hr class="bg-musaca w-150 hr-2" />
            <style>
                .text-xl-right {text-align: right}
            </style>
            <tr class="text-xl-right">
                <td><b>Total sum: @Model.TotalSum</b></td>
            </tr>
        </tfoot>
    </table>
    <hr class="bg-musaca w-150 hr-2" />

    <form class="mx-auto w-50" method="post">
        <button type="submit" class="btn bg-musaca text-white">Cashout</button>
    </form>

    <hr class="bg-musaca w-150 hr-2" />
    <hr class="bg-musaca w-150 hr-2" />
</main>