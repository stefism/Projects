@model AllPetsViewModel

<h1>All</h1>
<h2>Мараба от животните.</h2>

<div>
    <a href="/Pets/All?page=@Model.PreviousPage" class="float-left btn btn-info @(Model.PreviousDisabled ? "disabled" : string.Empty)">Prev</a>

    <a href="/Pets/All?page=@Model.NextPage" class="float-right btn btn-info">Next</a>
</div>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            Type
        </th>
        <th>
            Breed
        </th>
        <th>
            Price
        </th>
    </tr>
    @foreach (var pet in Model.Pets)
    {
<tr>
    <td>
        (@pet.Id) @pet.Category;
    </td>
    <td>
        @pet.Breed;
    </td>
    <td>
        $@pet.Price;
    </td>
</tr>
    }
</table>


