@model ICollection<Calendar.App.ViewModels.ReservationViewModel>
@{
    ViewData["Title"] = "All reservations";
}

<script src="~/js/ConfirmAdmin.js"></script>

<h3>@ViewData["Title"]</h3>
<hr />

<section>
    <table class="table table-hover">
        <tr>
            <th>Username</th>
            <th>Reserved date</th>
            <th>Price</th>
            <th>Release reservation </th>
        </tr>

        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Username</td>
                <td>@reservation.ReservedDate.Value.ToString("dd/MM/yyyy")</td>
                <td>@reservation.Price</td>
                <td>
                    <a id="@reservation.ReservationDateId" onclick="return ConfirmDeleteAdmin('Do you want to delete this reservation?', this)" class="btn btn-success">Release</a>
                </td>
            </tr>
        }
    </table>
</section>
<hr />
