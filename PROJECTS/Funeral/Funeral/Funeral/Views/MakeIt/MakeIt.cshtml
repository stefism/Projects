<!DOCTYPE html>
<html>
<head>
    <title>Направи си</title>
    <script src="https://kit.fontawesome.com/3c54b527d8.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/Main.css">
</head>
<body>
    <aside id="menu-items">

        <ul>
            <li><a href="#frames">Рамки</a></li>
            <li><a href="#texts">Текстове</a></li>
            <li><a href="#crosses">Кръстове</a></li>
            @if (User.Identity.Name == "stef4otm@gmail.com")
            {
                  <div class="dropdown">
                      <button class="dropbtn">Администрация</button>
                      <div class="dropdown-content">
